<h1>Acme Users Filter</h1>

<form action="/regenerate" method="POST" class="form-group">
  <input type="submit" value="Regenerate Users" class="btn btn-danger">
</form>

<nav>
  <ul class="nav nav-tabs">
  {{#each map}}
    <li{{#ifEquals ../letter letter}} class="active"{{/ifEquals}}>
      <a href="/users/filter/{{letter}}">
        {{letter}} <span class="badge badge-primary">{{number}}</span>
      </a>
    </li>
  {{/each}}
  <li
    {{#ifEquals letter 'All'}}
      class="active"
    {{/ifEquals}}
  ><a href="/">All</a></li>
  </ul>
</nav>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{firstname}}</td>
        <td>{{lastname}}</td>
        <td>{{email}}</td>
        <td>{{_location}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
